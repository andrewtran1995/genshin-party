{
	"name": "genshin-party",
	"version": "0.4.0",
	"keywords": [
		"cli",
		"genshin",
		"genshin-impact"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/andrewtran1995/genshin-party.git"
	},
	"license": "MIT",
	"author": {
		"name": "Andrew Tran",
		"email": "andrew.tran345@gmail.com"
	},
	"type": "module",
	"exports": {
		"import": "./dist/index.js"
	},
	"bin": "dist/bin.js",
	"files": [
		"dist/*"
	],
	"scripts": {
		"build": "tsc",
		"dev": "tsx src/bin.ts",
		"postinstall": "husky",
		"lint": "biome check --error-on-warnings",
		"lint:fix": "yarn lint --write",
		"prepack": "pinst --disable",
		"postpack": "pinst --enable",
		"pre-commit": "tsx src/pre-commit.ts",
		"prepare": "husky",
		"sort-package-json": "sort-package-json",
		"test": "vitest --run --typecheck",
		"test:watch": "vitest --typecheck"
	},
	"dependencies": {
		"@commander-js/extra-typings": "^14.0.0",
		"@inquirer/select": "^5.0.1",
		"ansis": "^4.2.0",
		"arktype": "^2.1.27",
		"commander": "^14.0.2",
		"dotenv": "^17.2.3",
		"genshin-db": "^5.2.6",
		"remeda": "^2.32.0",
		"ts-pattern": "^5.9.0",
		"xstate": "^5.24.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@types/node": "^24.10.1",
		"execa": "^9.6.0",
		"husky": "^9.1.7",
		"listr2": "^9.0.5",
		"pinst": "^3.0.0",
		"sort-package-json": "^3.5.0",
		"tsx": "^4.20.6",
		"type-fest": "^5.2.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.8"
	},
	"packageManager": "yarn@4.11.0",
	"engines": {
		"node": ">=22"
	}
}
