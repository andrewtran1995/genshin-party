{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**/*.ts",
			"**/*.json",
			"!dist",
			"!.vscode",
			"!**/package.json"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"domains": {
			"project": "all",
			"test": "all"
		},
		"enabled": true,
		"rules": {
			"complexity": "error",
			"performance": "error",
			"recommended": true,
			"security": "error",
			"style": {
				"noRestrictedImports": {
					"level": "error",
					"options": {
						"paths": {
							"genshin-db": "Should only be dynamically imported to avoid loading during normal operations."
						}
					}
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded",
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	}
}
