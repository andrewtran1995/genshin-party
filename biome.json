{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["./dist", "./.vscode", "package.json"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"complexity": {
				"all": true
			},
			"correctness": {
				"all": true,
				"noNodejsModules": "off"
			},
			"nursery": {
				"noRestrictedImports": {
					"level": "error",
					"options": {
						"paths": {
							"genshin-db": "Should only be dynamically imported to avoid loading during normal operations."
						}
					}
				}
			},
			"performance": {
				"all": true
			},
			"recommended": true,
			"style": {
				"all": true
			},
			"suspicious": {
				"all": true
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	}
}
